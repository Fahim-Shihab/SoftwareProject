<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.firebaseproject.MainActivity">

    <EditText
        android:id="@+id/Name"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="10dp"
        android:hint="Your Name" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/Age"
        android:layout_marginStart="115dp"
        android:layout_marginTop="150dp"
        android:hint="Your Age"
        />

    <Button
        android:id="@+id/fire"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="225dp"
        android:layout_marginStart="10dp"
        android:text="Adding to Firebase"
        android:textAllCaps="false"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    >

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/phonecall"
        android:id="@+id/CallF"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/phonemessage"
        android:id="@+id/MessageLogF"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/appuse"
        android:id="@+id/AppLogF"
        />

</LinearLayout>

    <ListView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:id="@+id/NameList"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginStart="200dp"
        android:id="@+id/AgeList"
        >

    </ListView>

</RelativeLayout>
